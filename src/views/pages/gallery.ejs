<div class="text-center my-10">
  <h1 class="text-3xl">Gallery images</h1>
  <small
    ><a class="text-pink-500" href="/gallery/upload">(Upload image)</a></small
  >
</div>
<section class="relative grid hidden">
  <% images.forEach(image => { %>
  <div class="grid-item w-full sm:w-1/2 lg:w-1/3 p-3">
    <div
      class="bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 w-full animate__animated animate__zoomIn animate__delay-0.8s">
      <a href="/gallery/image/<%= image.id %>">
        <img class="rounded-t-lg" src="<%= image.path %> " alt="" />
      </a>
      <div class="p-5">
        <a href="/gallery/image/<%= image.id %>">
          <h5
            class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
            ><%= image.title %>
          </h5>
        </a>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"
          ><%= image.description %>
        </p>
        <p class="mb-3 italic text-gray-500">
          <time><%= format(image.createdAt) %> </time>
        </p>
        <a
          href="/gallery/image/<%= image.id %>"
          class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-gradient-to-r from-cyan-500 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-cyan-300 dark:focus:ring-cyan-800 font-medium rounded-lg">
          Read more
          <svg
            aria-hidden="true"
            class="w-4 h-4 ml-2 -mr-1"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg">
            <path
              fill-rule="evenodd"
              d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
              clip-rule="evenodd"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
  <% }) %>
</section>

<script src="https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.min.js"></script>
<script src="https://unpkg.com/isotope-packery@2/packery-mode.pkgd.js"></script>
<script>
  window.addEventListener('DOMContentLoaded', () => {
    var grid = document.querySelector('.grid');
    grid.classList.remove('hidden');
    if (grid) {
      var iso = new Isotope(grid, {
        // options
        itemSelector: '.grid-item',
        layoutMode: 'packery'
        // layoutMode: 'fitRows'
      });
    }
  });
</script>
